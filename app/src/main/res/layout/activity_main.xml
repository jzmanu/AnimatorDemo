<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manu.animatordemo.MainActivity">

    <Button
        android:id="@+id/btnFrameAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="帧动画"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTweenAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="补间动画"
        app:layout_constraintBottom_toBottomOf="@+id/btnFrameAnimator"
        app:layout_constraintStart_toEndOf="@+id/btnFrameAnimator" />

    <Button
        android:id="@+id/btnPropertyAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="属性动画"
        app:layout_constraintBottom_toBottomOf="@+id/btnTweenAnimator"
        app:layout_constraintStart_toEndOf="@+id/btnTweenAnimator"
        app:layout_constraintTop_toTopOf="@+id/btnTweenAnimator" />

</android.support.constraint.ConstraintLayout>
